{
  "extends": "@calcom/tsconfig/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "@prisma/client/*": ["@calcom/prisma/client/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/types/*.d.ts",
    "../../packages/types/next-auth.d.ts"
  ],
  "exclude": ["node_modules", "templates", "auth"],
  "presets": ["@babel/preset-env", "@babel/preset-react"]
}
